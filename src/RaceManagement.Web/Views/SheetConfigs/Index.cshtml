@model List<RaceManagement.Shared.DTOs.SheetConfigDto>

<h2>Sheet Configs</h2>
<p><a class="btn btn-primary" asp-action="Create">+ Thêm SheetConfig</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>SpreadsheetId</th>
            <th>SheetName</th>
            <th>Credential</th>
            <th>HeaderRow</th>
            <th>DataStartRow</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.SpreadsheetId</td>
                <td>@s.SheetName</td>
                <td>@s.CredentialName</td>
                <td>@s.HeaderRowIndex</td>
                <td>@s.DataStartRowIndex</td>
                <td>@s.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-warning">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
