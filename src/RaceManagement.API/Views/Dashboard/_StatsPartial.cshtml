@model RaceManagement.Shared.DTOs.DashboardOverviewDto

<div class="row">
    <div class="col-md-3">
        <div class="card stat-card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="card-title mb-0">@Model.TotalRaces</h3>
                        <p class="card-text mb-1">Total Races</p>
                        <small>@Model.ActiveRaces active</small>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-running fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="card-title mb-0">@Model.TotalRegistrations</h3>
                        <p class="card-text mb-1">Registrations</p>
                        <small>@Model.TodayRegistrations today</small>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="card-title mb-0">@Model.TotalRevenue.ToString("C0")</h3>
                        <p class="card-text mb-1">Total Revenue</p>
                        <small>@Model.MonthlyRevenue.ToString("C0") this month</small>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card bg-warning text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="card-title mb-0">@Model.PendingPayments</h3>
                        <p class="card-text mb-1">Pending Payments</p>
                        <small>@Model.BibsToGenerate need BIBs</small>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
